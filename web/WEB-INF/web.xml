<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:app.xml</param-value>
    </context-param>
    <session-config>
        <session-timeout>14400</session-timeout>
    </session-config>
    <listener>
        <listener-class>cn.phyer.blog.plugin.ContextLoader</listener-class>
    </listener>

<!--  页面  -->
    <servlet>
        <servlet-name>article</servlet-name>
        <jsp-file>/WEB-INF/views/article.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>articleDetail</servlet-name>
        <jsp-file>/WEB-INF/views/articleDetail.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>tool</servlet-name>
        <jsp-file>/WEB-INF/views/tool.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>record</servlet-name>
        <jsp-file>/WEB-INF/views/record.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>about</servlet-name>
        <jsp-file>/WEB-INF/views/about.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>backstage</servlet-name>
        <jsp-file>/WEB-INF/views/backstage/manage.jsp</jsp-file>
    </servlet>
<!--  ajax  -->
    <servlet>
        <servlet-name>publicAction</servlet-name>
        <servlet-class>cn.phyer.blog.sqlAjax.PublicAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>commentAction</servlet-name>
        <servlet-class>cn.phyer.blog.sqlAjax.CommentAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imgUpload</servlet-name>
        <servlet-class>cn.phyer.blog.toolAjax.ImgUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verify_manager</servlet-name>
        <jsp-file>/WEB-INF/views/backstage/verify.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>manage</servlet-name>
        <servlet-class>cn.phyer.blog.sqlAjax.Manage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redirect</servlet-name>
        <servlet-class>cn.phyer.blog.plugin.UrlRedirect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ico</servlet-name>
        <servlet-class>cn.phyer.blog.toolAjax.GenerateIco</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>compress</servlet-name>
        <servlet-class>cn.phyer.blog.toolAjax.Compress</servlet-class>
    </servlet>
<!--  bind  -->
    <servlet>
        <servlet-name>githubbind</servlet-name>
        <servlet-class>cn.phyer.blog.bind.GithubBind</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>qqbind</servlet-name>
        <servlet-class>cn.phyer.blog.bind.QqBind</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>msbind</servlet-name>
        <servlet-class>cn.phyer.blog.bind.MsBind</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>articleDetail</servlet-name>
        <url-pattern>/article/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tool</servlet-name>
        <url-pattern>/tool</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>record</servlet-name>
        <url-pattern>/record</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>backstage</servlet-name>
        <url-pattern>/backstage</url-pattern>
    </servlet-mapping>
<!-- ajax -->
    <servlet-mapping>
        <servlet-name>publicAction</servlet-name>
        <url-pattern>/publicAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>commentAction</servlet-name>
        <url-pattern>/commentAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imgUpload</servlet-name>
        <url-pattern>/imgUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verify_manager</servlet-name>
        <url-pattern>/verify_manager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manage</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redirect</servlet-name>
        <url-pattern>*.r</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ico</servlet-name>
        <url-pattern>/genico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>compress</servlet-name>
        <url-pattern>/compress</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>githubbind</servlet-name>
        <url-pattern>/githubbind</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>qqbind</servlet-name>
        <url-pattern>/qqbind</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>msbind</servlet-name>
        <url-pattern>/msbind</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/WEB-INF/views/home.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/plugin/404.jsp</location>
    </error-page>
</web-app>